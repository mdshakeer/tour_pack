<p id="notice"><%= notice %></p>

<div class="col-lg-12 col-md-12 col-xs-12 h4 text-center roboto">Welcome to TourPack</div>

<%= react_component('TourPack', 
                    {:presenter => @tour_packages.to_json}) %>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Age from</th>
      <th>Age upto</th>
      <th>Max people</th>
      <th>Cost per person</th>
      <th>Last submission date</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tour_packages.each do |tour_package| %>
      <tr>
        <td><%= tour_package.user %></td>
        <td><%= tour_package.name %></td>
        <td><%= tour_package.age_from %></td>
        <td><%= tour_package.age_upto %></td>
        <td><%= tour_package.max_people %></td>
        <td><%= tour_package.cost_per_person %></td>
        <td><%= tour_package.last_submission_date %></td>
        <td><%= tour_package.active %></td>
        <td><%= link_to 'Show', tour_package %></td>
        <td><%= link_to 'Edit', edit_tour_package_path(tour_package) %></td>
        <td><%= link_to 'Destroy', tour_package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tour Package', new_tour_package_path %>
