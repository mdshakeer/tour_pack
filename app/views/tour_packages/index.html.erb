<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="col-lg-12 col-md-12 col-xs-12 h3 text-center roboto">Welcome to TourPack</div>

  <%#= react_component('TourPack', 
                      {:presenter => @tour_packages.to_json}) %>
  <% if current_user.is_admin? %>
    <div class="col-lg-12">
      <%= link_to "<i class='fa fa-plus'></i> Create Tour Package".html_safe, new_tour_package_path, :remote => true, :class => "btn btn-primary pull-right","data-toggle" => "modal", "data-target" => "#tourPack" %>
    </div>
  <% end %>
  <div class="col-lg-12 col-md-12 flexContainer">
    <div class="searchBox form-inline">
      <%= form_with(url: search_tour_packages_path, local: true) do |form| %>
        Search <input type="search" name="q" class="form-control"> <%= "(#{@tour_packages.total_count} matchs)" if action_name == "search" %>
      <% end %>
    </div>
    <%= render :partial => "tour_pack_list" %>
  </div>
  <div class="text-center">
    <%= will_paginate @tour_packages %>
  </div>

  <div id="tourPack" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">New Tour Pack</h4>
        </div>
        <div class="modal-body">
        </div>
      </div>

    </div>
  </div>
</div>