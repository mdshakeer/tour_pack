<%= form_with(url: tour_confirm_done_url(tour_package.id), method: :post, local: true) do |form| %>
  <div class="step_3">
    <div class="passBox mb-10">
      <div class="h4 text-muted">Main Passenger #<%= 1 %></div>
      <div class="form-group">
        <label>Name:</label>
        <%= tour_booking.name %>
      </div>
      <div class="form-group">
        <label>Contact:</label>
        <%= tour_booking.contact %>
      </div>
      <div class="form-group">
        <label>Address:</label>
        <%= tour_booking.address %>
      </div>
    </div>
    <% tour_booking.passengers.each_with_index do |p,i| %>
      <div class="passBox mb-10">
        <div class="h4 text-muted">Passenger #<%= i+2 %></div>
        <div class="form-group">
          <label>Name:</label>
          <%= p.name %>
        </div>
        <div class="form-group">
          <label>Age:</label>
          <%= p.age %>
        </div>
        <div class="form-group">
          <label>Gender:</label>
          <%= p.gender %>
        </div>
      </div>
    <% end %>
    <div class="col-lg-12 padding-reset">
      <div class="passBox"><label>Total Cost:</label> <%= @tour_booking.total_cost %></div>
      <div class="pull-left"><%= form.check_box :confirmation, :class => "form-control", :required => true %> Confirm my tour</div>
    </div>
    <div class="form-group text-center">
      <%= form.submit "Confirm Tour",:class => "btn btn-success" %>
    </div>
<% end %>
<div class="col-lg-12 text-center">
  <%= link_to 'Back', tour_members_path(@tour_package.id), :class => "btn btn-primary" %>
</div>